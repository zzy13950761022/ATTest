{
  "plan_version": 2,
  "target": "torch.nn.modules.conv",
  "block_rules": {
    "header_block": "HEADER",
    "footer_block": "FOOTER",
    "case_prefix": "CASE_",
    "case_format": "CASE_01"
  },
  "iteration_strategy": {
    "round1": {
      "include": "SMOKE_SET",
      "assert_level": "weak",
      "max_blocks": 5
    },
    "roundN": {
      "only_fix_failed_blocks": true,
      "block_limit": 3,
      "promote_deferred": true
    },
    "final": {
      "enable_strong_asserts": true,
      "coverage_optional": true
    }
  },
  "test_files": {
    "default": "tests/test_torch_nn_modules_conv.py",
    "all_pattern": "tests/test_torch_nn_modules_conv_*.py",
    "groups": {
      "G1": "tests/test_torch_nn_modules_conv_g1.py",
      "G2": "tests/test_torch_nn_modules_conv_g2.py"
    }
  },
  "active_group_order": ["G1", "G2"],
  "groups": [
    {
      "group_id": "G1",
      "title": "Conv2d 核心功能测试",
      "entrypoints": ["Conv2d", "_ConvNd"],
      "smoke_set": ["CASE_01", "CASE_02"],
      "deferred_set": ["CASE_05", "CASE_06"],
      "note": "测试 Conv2d 基本功能、参数验证和前向传播"
    },
    {
      "group_id": "G2",
      "title": "卷积变体与高级功能",
      "entrypoints": ["Conv1d", "Conv3d", "ConvTranspose2d"],
      "smoke_set": ["CASE_03"],
      "deferred_set": ["CASE_07", "CASE_08", "CASE_09"],
      "note": "测试其他卷积类型、转置卷积和复数支持"
    }
  ],
  "cases": [
    {
      "tc_id": "TC-01",
      "block_id": "CASE_01",
      "group_id": "G1",
      "name": "Conv2d 基本实例化与前向传播",
      "priority": "High",
      "param_matrix": [
        {
          "conv_type": "Conv2d",
          "in_channels": 3,
          "out_channels": 16,
          "kernel_size": 3,
          "dtype": "float32",
          "device": "cpu",
          "input_shape": [2, 3, 32, 32]
        }
      ],
      "asserts": {
        "weak": ["module_instantiated", "forward_works", "output_shape_correct", "dtype_preserved"],
        "strong": ["weight_init_distribution", "bias_correct_when_enabled", "gradient_flow"]
      },
      "oracle": "torch.nn.functional.conv2d",
      "assertion_level": "weak",
      "size": "S",
      "max_lines": 70,
      "max_params": 8,
      "is_parametrized": true,
      "requires_mock": false
    },
    {
      "tc_id": "TC-02",
      "block_id": "CASE_02",
      "group_id": "G1",
      "name": "参数验证与异常处理",
      "priority": "High",
      "param_matrix": [
        {
          "test_type": "invalid_groups",
          "in_channels": 8,
          "out_channels": 16,
          "kernel_size": 3,
          "groups": 3,
          "expect_error": "ValueError"
        },
        {
          "test_type": "invalid_padding_mode",
          "in_channels": 3,
          "out_channels": 16,
          "kernel_size": 3,
          "padding_mode": "invalid",
          "expect_error": "ValueError"
        }
      ],
      "asserts": {
        "weak": ["exception_raised", "exception_type_correct", "error_message_contains"],
        "strong": ["all_invalid_combinations_tested", "error_message_precise"]
      },
      "oracle": "torch.nn.modules.conv._ConvNd.__init__",
      "assertion_level": "weak",
      "size": "S",
      "max_lines": 60,
      "max_params": 6,
      "is_parametrized": true,
      "requires_mock": false
    },
    {
      "tc_id": "TC-03",
      "block_id": "CASE_03",
      "group_id": "G2",
      "name": "Conv1d 和 Conv3d 基本功能",
      "priority": "High",
      "param_matrix": [
        {
          "conv_type": "Conv1d",
          "in_channels": 3,
          "out_channels": 16,
          "kernel_size": 3,
          "input_shape": [2, 3, 32],
          "dtype": "float32",
          "device": "cpu"
        },
        {
          "conv_type": "Conv3d",
          "in_channels": 3,
          "out_channels": 16,
          "kernel_size": 3,
          "input_shape": [2, 3, 16, 16, 16],
          "dtype": "float32",
          "device": "cpu"
        }
      ],
      "asserts": {
        "weak": ["module_instantiated", "forward_works", "output_shape_correct", "dtype_preserved"],
        "strong": ["consistency_across_dimensions", "gradient_flow_3d"]
      },
      "oracle": "torch.nn.functional.conv1d/conv3d",
      "assertion_level": "weak",
      "size": "M",
      "max_lines": 80,
      "max_params": 8,
      "is_parametrized": true,
      "requires_mock": false
    },
    {
      "tc_id": "TC-04",
      "block_id": "CASE_04",
      "group_id": "G1",
      "name": "padding='same' 与特殊模式",
      "priority": "High",
      "param_matrix": [
        {
          "padding": "same",
          "stride": 1,
          "kernel_size": 3,
          "input_shape": [2, 3, 32, 32],
          "padding_mode": "zeros"
        },
        {
          "padding": 1,
          "padding_mode": "reflect",
          "input_shape": [2, 3, 32, 32]
        }
      ],
      "asserts": {
        "weak": ["same_padding_output_shape", "reflect_padding_works", "no_exception"],
        "strong": ["same_padding_equivalence", "all_padding_modes_tested"]
      },
      "oracle": "torch.nn.functional.conv2d with manual padding",
      "assertion_level": "weak",
      "size": "M",
      "max_lines": 75,
      "max_params": 7,
      "is_parametrized": true,
      "requires_mock": false
    },
    {
      "tc_id": "TC-05",
      "block_id": "CASE_05",
      "group_id": "G1",
      "name": "权重初始化验证",
      "priority": "Medium",
      "param_matrix": [
        {
          "in_channels": 3,
          "out_channels": 16,
          "kernel_size": 3,
          "bias": true,
          "test_samples": 1000
        }
      ],
      "asserts": {
        "weak": ["weights_initialized", "bias_initialized_when_enabled", "values_finite"],
        "strong": ["uniform_distribution_check", "variance_correct", "statistical_test_passed"]
      },
      "oracle": "theoretical uniform distribution U(-√k, √k)",
      "assertion_level": "weak",
      "size": "M",
      "max_lines": 85,
      "max_params": 6,
      "is_parametrized": false,
      "requires_mock": true
    }
  ],
  "param_extensions": [
    {
      "base_block_id": "CASE_01",
      "priority": "Medium",
      "params": {
        "dtype": "float64",
        "device": "cpu",
        "input_shape": [4, 3, 64, 64]
      },
      "note": "扩展数据类型和输入形状"
    },
    {
      "base_block_id": "CASE_01",
      "priority": "Low",
      "params": {
        "dtype": "complex64",
        "device": "cpu"
      },
      "note": "复数数据类型支持"
    },
    {
      "base_block_id": "CASE_02",
      "priority": "Medium",
      "params": {
        "test_type": "same_padding_invalid_stride",
        "padding": "same",
        "stride": 2,
        "expect_error": "ValueError"
      },
      "note": "padding='same' 时 stride != 1 的异常"
    },
    {
      "base_block_id": "CASE_03",
      "priority": "Medium",
      "params": {
        "conv_type": "ConvTranspose2d",
        "input_shape": [2, 3, 16, 16]
      },
      "note": "转置卷积测试"
    }
  ],
  "smoke_set": ["CASE_01", "CASE_02", "CASE_03", "CASE_04"],
  "deferred_set": ["CASE_05", "CASE_06", "CASE_07", "CASE_08", "CASE_09"]
}