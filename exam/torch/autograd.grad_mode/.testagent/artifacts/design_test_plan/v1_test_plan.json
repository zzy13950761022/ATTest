{
  "plan_version": 2,
  "target": "torch.autograd.grad_mode",
  "block_rules": {
    "header_block": "HEADER",
    "footer_block": "FOOTER",
    "case_prefix": "CASE_",
    "case_format": "CASE_01"
  },
  "iteration_strategy": {
    "round1": {"include": "SMOKE_SET", "assert_level": "weak", "max_blocks": 5},
    "roundN": {"only_fix_failed_blocks": true, "block_limit": 3, "promote_deferred": true},
    "final": {"enable_strong_asserts": true, "coverage_optional": true}
  },
  "test_files": {
    "default": "tests/test_torch_autograd_grad_mode.py",
    "all_pattern": "tests/test_torch_autograd_grad_mode_*.py",
    "groups": {
      "G1": "tests/test_torch_autograd_grad_mode_g1.py",
      "G2": "tests/test_torch_autograd_grad_mode_g2.py"
    }
  },
  "active_group_order": ["G1", "G2"],
  "groups": [
    {
      "group_id": "G1",
      "title": "基础梯度控制类",
      "entrypoints": ["no_grad", "enable_grad"],
      "smoke_set": ["CASE_01", "CASE_02"],
      "deferred_set": ["CASE_05"],
      "note": "测试no_grad和enable_grad的基本功能与交互"
    },
    {
      "group_id": "G2",
      "title": "高级模式与装饰器",
      "entrypoints": ["inference_mode", "set_grad_enabled"],
      "smoke_set": ["CASE_03", "CASE_04"],
      "deferred_set": ["CASE_06", "CASE_07"],
      "note": "测试inference_mode、set_grad_enabled和装饰器用法"
    }
  ],
  "cases": [
    {
