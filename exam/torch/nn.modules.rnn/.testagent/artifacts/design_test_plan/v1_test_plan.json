    "groups": {
      "G1": "tests/test_torch_nn_modules_rnn_g1.py",
      "G2": "tests/test_torch_nn_modules_rnn_g2.py"
    }
  },
  "active_group_order": ["G1", "G2"],
  "groups": [
    {
      "group_id": "G1",
      "title": "核心RNN/LSTM/GRU正向传播",
