          "mode": "LSTM",
          "input_size": 8,
          "hidden_size": 16,
          "num_layers": 2,
          "batch_first": true,
          "bidirectional": false,
          "dtype": "float32",
          "device": "cpu",
          "batch_size": 2,
          "seq_len": 4
        }
      ],
      "asserts": {
        "weak": ["output_shape", "hidden_shape", "cell_shape", "dtype", "finite"],
        "strong": ["lstm_gate_consistency", "forget_bias_check", "gradient_flow"]
