      "block_id": "CASE_01",
      "group_id": "G1",
      "name": "基础RNN正向传播形状验证",
      "priority": "High",
      "param_matrix": [
        {
          "mode": "RNN_TANH",
          "input_size": 10,
          "hidden_size": 20,
          "num_layers": 1,
          "batch_first": false,
          "bidirectional": false,
          "dtype": "float32",
          "device": "cpu",
          "batch_size": 3,
          "seq_len": 5
        }
      ],
      "asserts": {
        "weak": ["output_shape", "hidden_shape", "dtype", "finite", "no_nan"],
        "strong": ["approx_equal_ref", "gradient_check", "memory_leak"]
      },
      "oracle": "torch.nn.RNN",
      "assertion_level": "weak",
      "size": "S",
      "max_lines": 70,
      "max_params": 8,
      "is_parametrized": true,
      "requires_mock": false
